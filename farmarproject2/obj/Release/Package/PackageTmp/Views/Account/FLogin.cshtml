
@model farmarproject2.Models.ServiceAccount

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FLogin</title>
</head>
<body >
    <div class="row" style="margin:200px 0 0 250px">
    
        <div class="col-lg-7" style="padding:0">

            <img style="width:100%;height:100%" src="@Url.Content("~/image/service.jpg")" />
        </div>
    

        <div class="col-lg-7" style="border:1px solid #ffd800">
            @using (Html.BeginForm("FLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4><b>管理員</b></h4>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                     @Html.Label("帳號",new { @class= "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Account, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Account, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("密碼", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Psword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Psword, "", new { @class = "text-danger" })


                    </div>
                    <div class="col-lg-12"></div>
                    <div class="col-lg-5"></div>
                    <div class="col-lg-7">
                        <button type="button" id="ServiceDemo" class="btn btn-default" style="margin-top:10px;width:80px">Demo</button>
                        <input type="submit" value="登入" class="btn btn-default" style="margin-top:10px;width:70px" />
                    </div>

                </div>

            }
        </div>
    </div>
  

    @Scripts.Render("~/bundles/jquery")
    <script>


        $(document).ready(function () {
            $('#ServiceDemo').click(ServiceDemo1);
        });
        function ServiceDemo1() {
            $("#Account").val("famar123");
            $("#Psword").val("123456");
        }
    </script>
</body>
</html>
