@model farmarproject2.Models.AspNetUser
@{
    Layout = null;
}

<form id="send" enctype = "multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.Email, new { @class = "control-label" })
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.FamName, new { @class = "control-label" })
        @Html.EditorFor(model => model.FamName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.FamName)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PhoneNumber, new { @class = "control-label" })
        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <img id="imgp" src='@Url.Content("~/image/")@Model.UserIg?'+new Date().getTime();  style="width:320px;height:240px;">
        @Html.HiddenFor(model => model.UserIg, new { htmlAttributes = new { @class = "form-control" } })
        <input type="file" name="File1" id="File1" accept="image/*" />
    </div>
    <div class="form-group">
        <button  onclick="return Editmeber();"  class="btn btn-primary" >存檔
        </button>
    </div>
  </form>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#imgp').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }

    }
    $("#File1").change(function () {
        readURL(this);
    });
    $(document).ready(function () {
        ch();
    });
    function ch() {
        document.getElementById("imgp").src='@Url.Content("~/image/")@Model.UserIg?'+new Date().getTime();
    }
    
</script>
